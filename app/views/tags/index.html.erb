<h2>Tag List</h2>

<%= link_to "&larr; Back".html_safe, creatures_path, class: "btn btn-primary margin-bottom" %>
<%= link_to "New Tag", new_tag_path, class: "btn btn-success pull-right margin-bottom" %>
<% @tags.each do |tag| %>
<div class="well">
  <h3>#<%= link_to tag.name, tag %></h3>
  <%= link_to "", tag, method: :delete, class: 'btn btn-danger btn-sm glyphicon glyphicon-trash pull-right margin-left', data: {confirm: "Are you sure?"} %>
  <%= link_to "", edit_tag_path(tag), class: 'btn btn-primary btn-sm glyphicon glyphicon-pencil pull-right margin-left' %>
  <br>
</div>
<% end %>