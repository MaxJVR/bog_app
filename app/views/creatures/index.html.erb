<h2>Creature List</h2>

<%= link_to "&larr; Back".html_safe, root_path, class: "btn btn-primary margin-bottom" %>
<%= link_to "New Tag", new_tag_path, class: "btn btn-danger pull-right margin-bottom" %>
<%= link_to "New Creature", new_creature_path, class: "btn btn-success pull-right margin-bottom" %>
<% @creatures.each do |creature| %>
<div class="panel panel-primary">
  <div class="panel-heading">
  <h3><%= creature.name %></h3>
  </div>
   <div class="panel-body">
  <h4><%= creature.description %></h4>
  <%= link_to "", creature, method: :delete, class: 'btn btn-danger btn-sm glyphicon glyphicon-trash pull-right margin-left', data: {confirm: "Are you sure?"} %>
  <%= link_to "", edit_creature_path(creature), class: 'btn btn-primary btn-sm glyphicon glyphicon-pencil pull-right margin-left' %>
  <h5><%= link_to "Permalink", creature %></h5>
  <h6>
  <% creature.tags.each do |tag| %>
    <%= link_to "##{tag.name}", tag %>
  <% end %>
  </h6>
  </div>
</div>
<% end %>